    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="翻页"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textPage">

            <ImageButton
                android:id="@+id/tv_page_simulation"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@mipmap/fangzhen_d"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/tv_page_cover"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/btn_page_simulation"
                android:layout_weight="1"
                android:background="@mipmap/fugai_d"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/tv_page_slide"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/btn_page_cover"
                android:layout_weight="1"
                android:background="@mipmap/huadong_d"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/tv_page_none"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@mipmap/never_d"
                android:gravity="center"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="背景"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textBackground">

            <TextView
                android:id="@+id/bg_white"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/yuedu_one"
                android:gravity="center" />

            <TextView
                android:id="@+id/bg_book"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/yuedu_two"
                android:gravity="center" />

            <TextView
                android:id="@+id/bg_pink"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/yuedu_three"
                android:gravity="center" />

            <TextView
                android:id="@+id/bg_green"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/yuedu_four"
                android:gravity="center" />

            <TextView
                android:id="@+id/bg_color"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/yuedu_five"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="模式"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textModel"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/daymodel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/day"
                android:gravity="center" />

            <TextView
                android:id="@+id/nightmodel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/night"
                android:gravity="center" />
        </LinearLayout>

    </RelativeLayout>

